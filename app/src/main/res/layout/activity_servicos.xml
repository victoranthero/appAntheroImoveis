<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Servicos"
    android:orientation="vertical"
    android:background="@drawable/degrade">

    <TextView
        android:id="@+id/idSejaBemVindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Nossos Serviços"
        android:textColor="#dda520"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="15dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Compra e Venda"
        android:textColor="#dda520"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="123dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:layout_gravity="center"
        android:text="Nossos Profissionis são especializados para atuarem na intermediação de negócios imobiliários e capacitados para acompanhar o cliente do início ao fim do processo de compra e venda de imóveis."
        android:textColor="#ffffff"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="174dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal|center_vertical"
        android:layout_gravity="center"
        android:text="Aluguel"
        android:textColor="#dda520"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="364dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:layout_gravity="center"
        android:text="Trabalhamos com administração de imóveis, residenciais e comerciais, buscando gerir o contrato de locação da melhor maneira possivel."
        android:textColor="#ffffff"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="435dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Juridico"
        android:textColor="#dda520"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="589dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Oferecemos, assessoria jurídica na análise de documentos, na elaboração de contratos e no ajuizamento e acompanhamento de ações, através de um de advogado que fica inteiramente à disposição dos clientes."
        android:textColor="#ffffff"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="633dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="15dp"
        android:background="@drawable/botaoacessar"
        android:onClick="voltar"
        android:text="Voltar" />

    <TextView
        android:id="@+id/btnSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:clickable="true"
        android:onClick="site"
        android:text="www.antheroimoveis.com.br"
        android:textColor="#000fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/enderecoServicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:textColor="#000fff"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Avenida Albert Einstein, 730, Vila Iasi - Taboão da Serra – SP , CEP: 06.780-110"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="693dp" />


</LinearLayout>